<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF" >

    <ImageView
        android:id="@+id/carImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/car" />

    <Button
        android:id="@+id/goButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/circle_button"
        android:onClick="onGoButtonClick"
        android:textColor="@android:color/white"
        android:text="@string/go" />

    <Button
        android:id="@+id/helpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:background="@drawable/parallelogram_button"
        android:textColor="@android:color/white"
        android:onClick="onHelpButtonClick"
        android:text="@string/help" />

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/helpButton"
        android:layout_alignLeft="@+id/helpButton"
        android:background="@drawable/parallelogram_button"
        android:textColor="@android:color/white"
        android:onClick="onSettingsButtonClick"
        android:text="@string/settings" />

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/helpButton"
        android:layout_below="@+id/helpButton"
        android:background="@drawable/parallelogram_button"
        android:textColor="@android:color/white"
        android:onClick="onAboutButtonClick"
        android:text="@string/about" />

</RelativeLayout>